<style>
@keyframes zoomEffect {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.2); }
}

.zoom-word {
    display: inline-block;
    transition: transform 0.5s ease-in-out;
    margin-right: 5px; /* Giữ khoảng cách giữa các từ */
}

</style>
<script>
document.addEventListener("DOMContentLoaded", function() {
    const textElement = document.getElementById('topSanPham');
    const words = textElement.textContent.split(' ');
    textElement.innerHTML = '';

    words.forEach((word, index) => {
        let span = document.createElement('span');
        span.textContent = word + ' ';
        span.className = 'zoom-word';
        textElement.appendChild(span);
    });

    let currentIndex = 0;
    function animateWords() {
        const spans = textElement.querySelectorAll('.zoom-word');
        spans.forEach((span, i) => {
            span.style.animation = 'none'; // Reset animation
        });
        spans[currentIndex].style.animation = 'zoomEffect 0.4s ease-in-out';
        currentIndex = (currentIndex + 1) % spans.length; // Move to next word, loop back to first
    }

    setInterval(animateWords, 100); // Run the animation every 600ms
});


</script>